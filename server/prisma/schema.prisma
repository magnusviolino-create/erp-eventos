generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MASTER
  MANAGER
  STANDARD
  OBSERVER
}

model Unit {
  id        String   @id @default(uuid())
  name      String   @unique
  users     User[]
  events    Event[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("units")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STANDARD)
  unitId    String?
  unit      Unit?    @relation(fields: [unitId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]

  @@map("users")
}

enum EventStatus {
  OPEN
  IN_PROGRESS
  PAUSED
  COMPLETED
  CANCELED
}

model Event {
  id          String   @id @default(uuid())
  name        String
  startDate   DateTime
  endDate     DateTime
  location    String?
  description String?
  eventCode   String?  @unique
  budget      Float?   @default(0)
  status      EventStatus @default(OPEN)
  project     String?
  action      String?
  responsibleEmail String?
  responsiblePhone String?
  responsibleUnit String?
  cancellationReason String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  unitId      String?
  unit        Unit?    @relation(fields: [unitId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  transactions Transaction[]
  communicationItems CommunicationItem[]
  requisitions Requisition[]

  @@map("events")
}

enum TransactionType {
  INCOME
  EXPENSE
}


enum TransactionStatus {
  APPROVED
  REJECTED
  QUOTATION
  PRODUCTION
  COMPLETED
}

model Transaction {
  id          String          @id @default(uuid())
  description     String
  amount          Float
  type            TransactionType
  status          TransactionStatus @default(QUOTATION)
  requisitionNum  String? // Manter por enquanto para histórico, mas o oficial será via relation
  serviceOrderNum String?
  date            DateTime        @default(now())
  
  eventId         String
  event           Event           @relation(fields: [eventId], references: [id], onDelete: Cascade)

  requisitionId   String?
  requisition     Requisition?    @relation(fields: [requisitionId], references: [id], onDelete: Cascade)

  quantity        Int             @default(1)
  deliveryDate    DateTime?

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("transactions")
}

model Requisition {
  id          String   @id @default(uuid())
  number      Int      @default(autoincrement()) // Numeração sequencial automática
  
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  transactions Transaction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("requisitions")
}

model Operator {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  communicationItems CommunicationItem[]

  @@map("operators")
}

model Service {
  id        String   @id @default(uuid())
  name      String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  communicationItems CommunicationItem[]

  @@map("services")
}

enum CommunicationStatus {
  AGUARDANDO
  EM_ATENDIMENTO
  CRIACAO
  APROVADO
  REPROVADO
}

model CommunicationItem {
  id          String   @id @default(uuid())
  
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  serviceId   String
  service     Service  @relation(fields: [serviceId], references: [id])

  operatorId  String?
  operator    Operator? @relation(fields: [operatorId], references: [id])

  deliveryDate DateTime @default(now())
  quantity    Int      @default(1)
  
  status      CommunicationStatus @default(AGUARDANDO)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("communication_items")
}
