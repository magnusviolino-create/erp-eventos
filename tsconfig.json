{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "es2020"
        ],
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "server/src/*"
            ]
        }
    },
    "include": [
        "api/**/*",
        "server/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "client"
    ]
}